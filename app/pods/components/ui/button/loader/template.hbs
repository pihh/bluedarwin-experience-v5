{{#if this.loaded}}

{{else}}
<svg class="circle-container " viewBox="2 -2 28 36" xmlns="http://www.w3.org/2000/svg">
  <circle class="circle-container__background" r="16" cx="16" cy="16"></circle>
  <circle class="circle-container__progress" r="16" cx="16" cy="16" style="{{this.strokedashOffset}}"></circle>
</svg>

{{/if}}


<div class="bde__ui-button-loader" {{did-insert this.didInsert}}>
  <div
    class="bde__ui-button-loader__circle-wrapper
      {{if this.loaded 'loaded' ''}}
      {{this.className}}"
    {{action this.onExit}}
  >

    <div class="bde__ui-button-loader__circle-container">
      <div class="bde__ui-button-loader__circle"></div>
    </div>
    <div class="bde__ui-button-loader__circle-container">
      <div class="bde__ui-button-loader__circle"></div>
    </div>
    <div class="bde__ui-button-loader__circle-container">
      <div class="bde__ui-button-loader__circle"></div>
    </div>
    <div class="bde__ui-button-loader__circle-container">
      <div class="bde__ui-button-loader__circle">
        <h1>
          {{#if this.loaded}}
            {{t "go"}}
          {{else}}
            {{this.progress}}%
          {{/if}}
        </h1>
      </div>
    </div>
  </div>
  <div class="bde__ui-button-loader__title">
    {{#if this.loaded}}
      <div class="bde__ui-button-loader__title__dots">&nbsp;</div>
    {{else}}
      {{t "loading"}}<div
        class="bde__ui-button-loader__title__dots"
      >{{this.dots}}</div>
    {{/if}}
  </div>
</div>